<html>
	<head>
		<title>Synatra</title>
		<style>
			input, textarea, button{padding: 10px;}
			.success{color: green;}
		</style>
	</head>
	<body>
		<h3 class="success"><%= @message%></h3>
		<form action="" method="post">
			<input type="text" name="title" placeholder="Enter title ..." value="<%= @title %>">
			<hr>
			<textarea name="content" placeholder="Enter content...."><%= @content %></textarea>
			<hr>
			<button type="submit">Submit</button>
		</form>
	</body>
</html>